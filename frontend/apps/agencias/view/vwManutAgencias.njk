{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        {{title}}
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/agencias/insertAgencias" class="btn btn-primary">
              Inserir novo agencia
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabAgencias" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>Nome</th>
                  <th>E-mail</th>
                  <th>Telefone</th>
                  <th>Endereço</th>
                  <th>Data Criação</th>
                  <th>Orçamento</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data%}
                  <tr>
                    <td>
                      {# Link para visualização dos dados #}
                      <a href="/agencias/viewAgencias/{{ reg.agenciaid }}"  title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>

                      {# Link para atualuzação e remoção dos dados#}
                      <a href="/agencias/UpdateAgencias/{{ reg.agenciaid }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{reg.nome}}</td>
                    <td>{{reg.email}}</td>
                    <td>{{reg.telefone}}</td>
                    <td>{{reg.endereco}}</td>
                    <td>{{reg.data_criacao}}</td>
                    <td>{{reg.orcamento}}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>

          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();
      //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwAgencias|onload]Servidor retornou o erro:" + localErro);
      }

      new DataTable('#tabAgencias');
    };
  </script>

{% endblock %}